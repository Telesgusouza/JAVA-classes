package application;

import java.time.Instant;
import java.time.LocalDate;
import java.time.LocalDateTime;

public class Program {

	public static void main(String[] args) {

		LocalDate d01 = LocalDate.now(); // data local
		LocalDateTime d02 = LocalDateTime.now(); // data e hora local
		Instant d03 = Instant.now(); // data e hora global
		
		LocalDate d04 = LocalDate.parse("2022-07-20"); // data formatada local
		LocalDateTime d05 = LocalDateTime.parse("2022-07-20T01:30:26"); // data e hora formatada local
		Instant d06 = Instant.parse("2022-07-20T01:30:26Z"); // data e hora formatada global
		Instant d07 = Instant.parse("2022-07-20T01:30:26-03:00"); // data e hora formatada global
		
		LocalDate d08 = LocalDate.parse("20/07/2023");
		
		System.out.println(d01);
		System.out.println(d02);
		System.out.println(d03);
		System.out.println(d04);
		System.out.println(d05);
		System.out.println(d06);
		System.out.println(d07);
		System.out.println(d08);
		
	}

}
